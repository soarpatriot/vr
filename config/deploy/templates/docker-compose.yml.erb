version: '2'
services: 
  db: 
    image: postgres:9.6.5
    container_name: postgres
    restart: always
    ports: 
      - 5432:5432
    volumes: 
      - /pgdata:/var/lib/postgresql/data
    environment:
      - POSTGRES_PASSWORD=soar1234
  #node: 
  #  build: ./node
  #  container_name: vr-node
  #  image: soar/vr-node:1.0.1
  #  volumes: 
  #    - /home/soar/source/vr:/data/www/vr
  #  command: bash -c "npm install"
  install:
    build: ./docker/web
    image: soar/vr:1.0.4
    command: bash -c "<%= fetch(:install_commands) %>"
    container_name: dep
    volumes:
      - <%= fetch(:user_home) %>/.hex:/root/.hex
      - <%= fetch(:user_home) %>/.mix:/root/.mix
      - <%= fetch(:deploy_to) %>:/data/www/vr
  web: 
    build: ./docker/web
    image: soar/vr:1.0.4
    container_name: vr
    volumes: 
      - <%= fetch(:user_home) %>/.hex:/root/.hex
      - <%= fetch(:user_home) %>/.mix:/root/.mix
      - <%= fetch(:deploy_to) %>:/data/www/vr
    command: bash -c "<%= fetch(:commands) %>"
    #"npm install && mix deps.get && mix ecto.create && mix ecto.migrate && iex -S mix phoenix.server"
    ports: 
      - 4000:4000
    depends_on:
      - install 
    links: 
      - db
